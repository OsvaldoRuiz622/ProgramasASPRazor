@page
@model Programas_Tarea.Pages.CifradoModel
@{
}
<form method="post">
    <div>
        <label for="mensaje">Mensaje:</label>
        <input type="text" id="mensaje" name="mensaje" required>
    </div>
    <div>
        <label for="desplazamiento">Desplazamiento (N):</label>
        <input type="number" id="desplazamiento" name="desplazamiento" required>
    </div>
    <button type="submit">Cifrar</button>
</form>

@if (Model.ResultadoCifrado != null)
{
    <div>
        <h2>Resultado:</h2>
        <p>@Model.ResultadoCifrado</p>
    </div>
}